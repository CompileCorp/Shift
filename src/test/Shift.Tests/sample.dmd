mixin Audited {
  datetime createdAt
  datetime updatedAt

  model Log {
    string message
  }
}

model Customer with Audited {
  string name
  string email?
  
  models Address {
    string street
    string city
    string postalCode
  }
  
  model Profile
}

model Product {
  string name
  decimal price
  int stockQuantity
  
  index (name) @unique
  index (price, stockQuantity)
}

model Order {
  datetime orderDate
  decimal totalAmount
  
  model Customer
  models OrderItem {
    int quantity
    decimal unitPrice
    
    model Product
  }
} 